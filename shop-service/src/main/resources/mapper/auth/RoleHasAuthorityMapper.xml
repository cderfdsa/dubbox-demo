<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cyf.shop.auth.bean.RoleHasAuthority">
	<sql id="table"> auth_role_has_authority </sql>

	<!-- 用于返回的bean对象 -->
	<resultMap id="beanMap" type="com.cyf.shop.auth.bean.RoleHasAuthority">
		<result column="id" property="id" jdbcType="BIGINT"/>
		<result column="fkRoleId" property="fkRoleId" jdbcType="BIGINT"/>
		<result column="fkAuthorityId" property="fkAuthorityId" jdbcType="BIGINT"/>
		<result column="createTime" property="createTime" jdbcType="TIMESTAMP"/>
		<result column="updateTime" property="updateTime" jdbcType="TIMESTAMP"/>
	</resultMap>
	
	<!-- 用于select查询公用抽取的列，每一个字段都用as取一个别名时为了排序方便，也是为了其他自定义语句方便使用beanMap -->
	<sql id="fields">
		id as id,
		fk_role_id as fkRoleId,
		fk_authority_id as fkAuthorityId,
		create_time as createTime,
		update_time as updateTime
	</sql>

	<!-- 多条件组合查询的条件(如：IN LIKE BETWEEN = > < 等等的查询) -->
	<sql id="condWhere">
		<where>
			<if test="id != null">
				AND id = #{id,jdbcType=BIGINT}
			</if>
			<if test="idList != null and idList.size() > 0">
				AND id IN <foreach collection="idList" item="item" index="index" open="(" separator="," close=")">#{item,jdbcType=BIGINT}</foreach>
			</if>
			<if test="fkRoleId != null">
				AND fk_role_id = #{fkRoleId,jdbcType=BIGINT}
			</if>
			<if test="fkRoleIdList != null and fkRoleIdList.size() > 0">
				AND fk_role_id IN <foreach collection="fkRoleIdList" item="item" index="index" open="(" separator="," close=")">#{item,jdbcType=BIGINT}</foreach>
			</if>
			<if test="fkAuthorityId != null">
				AND fk_authority_id = #{fkAuthorityId,jdbcType=BIGINT}
			</if>
			<if test="fkAuthorityIdList != null and fkAuthorityIdList.size() > 0">
				AND fk_authority_id IN <foreach collection="fkAuthorityIdList" item="item" index="index" open="(" separator="," close=")">#{item,jdbcType=BIGINT}</foreach>
			</if>
			<if test="createTimeStart != null">
				AND create_time &gt;= #{createTimeStart,jdbcType=TIMESTAMP}
			</if>
			<if test="createTimeEnd != null">
				AND create_time &lt; #{createTimeEnd,jdbcType=TIMESTAMP}
			</if>
			<if test="updateTimeStart != null">
				AND update_time &gt;= #{updateTimeStart,jdbcType=TIMESTAMP}
			</if>
			<if test="updateTimeEnd != null">
				AND update_time &lt; #{updateTimeEnd,jdbcType=TIMESTAMP}
			</if>
		</where>
	</sql>

	<!-- 插入记录 -->
	<insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.cyf.shop.auth.bean.RoleHasAuthority">
		INSERT INTO <include refid="table" /> (
        	id ,
        	fk_role_id ,
        	fk_authority_id ,
        	create_time ,
        	update_time 
        ) VALUES (
        	#{id,jdbcType=BIGINT} ,
        	#{fkRoleId,jdbcType=BIGINT} ,
        	#{fkAuthorityId,jdbcType=BIGINT} ,
        	#{createTime,jdbcType=TIMESTAMP} ,
        	#{updateTime,jdbcType=TIMESTAMP} 
        )
	</insert>

	<!-- 批量插入记录 -->
	<insert id="insertList" useGeneratedKeys="true" keyProperty="id" parameterType="list">
		INSERT INTO <include refid="table" /> (
        	id ,
        	fk_role_id ,
        	fk_authority_id ,
        	create_time ,
        	update_time 
        ) VALUES 
		<foreach collection="list" item="item" separator=",">
			(
			#{item.id,jdbcType=BIGINT},
			#{item.fkRoleId,jdbcType=BIGINT},
			#{item.fkAuthorityId,jdbcType=BIGINT},
			#{item.createTime,jdbcType=TIMESTAMP},
			#{item.updateTime,jdbcType=TIMESTAMP}
			)
		</foreach>
	</insert>

	<!--动态删除-->
	 <delete id="deleteBy">
        DELETE FROM <include refid="table" /> <include refid="condWhere"/>  
    </delete>
    
	<!--更新-->
	<update id="update" parameterType="com.cyf.shop.auth.bean.RoleHasAuthority">
        UPDATE <include refid="table" /> SET
			fk_role_id = #{fkRoleId,jdbcType=BIGINT},
			fk_authority_id = #{fkAuthorityId,jdbcType=BIGINT},
			create_time = #{createTime,jdbcType=TIMESTAMP},
			update_time = #{updateTime,jdbcType=TIMESTAMP}
         WHERE id = #{id,jdbcType=BIGINT}
	</update>

	<!-- 只更新值不为null的字段 -->
	<update id="updateIfNotNull" parameterType="com.cyf.shop.auth.bean.RoleHasAuthority">
		UPDATE <include refid="table" />
		<set>
			<if test="fkRoleId != null">
				fk_role_id=#{fkRoleId,jdbcType=BIGINT},
			</if>
			<if test="fkAuthorityId != null">
				fk_authority_id=#{fkAuthorityId,jdbcType=BIGINT},
			</if>
			<if test="createTime != null">
				create_time=#{createTime,jdbcType=TIMESTAMP},
			</if>
			<if test="updateTime != null">
				update_time=#{updateTime,jdbcType=TIMESTAMP},
			</if>
		</set>
		WHERE id = #{id,jdbcType=BIGINT}
	</update>
	
	<!-- 批量更新 -->
	<update id="updateList" parameterType="list">
        UPDATE <include refid="table" /> SET
			fk_role_id = 
			<foreach collection="list" item="item" index="index" open="case id" separator=" " close="end">
				when #{item.id,jdbcType=BIGINT} then #{item.fkRoleId,jdbcType=BIGINT}
			</foreach>
			,
			fk_authority_id = 
			<foreach collection="list" item="item" index="index" open="case id" separator=" " close="end">
				when #{item.id,jdbcType=BIGINT} then #{item.fkAuthorityId,jdbcType=BIGINT}
			</foreach>
			,
			create_time = 
			<foreach collection="list" item="item" index="index" open="case id" separator=" " close="end">
				when #{item.id,jdbcType=BIGINT} then #{item.createTime,jdbcType=TIMESTAMP}
			</foreach>
			,
			update_time = 
			<foreach collection="list" item="item" index="index" open="case id" separator=" " close="end">
				when #{item.id,jdbcType=BIGINT} then #{item.updateTime,jdbcType=TIMESTAMP}
			</foreach>
			
		WHERE id IN <foreach collection="list" item="item" index="index" open="(" separator="," close=")">#{item.id,jdbcType=BIGINT}</foreach>
	</update>

	<!-- 多条件精确查询时计算总记录数 -->
    <select id="countByCond" resultType="int">
        SELECT count(*) FROM <include refid="table" /> 
		<include refid="condWhere"/>
    </select>

	<!-- 多条件组合查询 -->
    <select id="listByCond" resultMap="beanMap">
    	SELECT <include refid="fields" />
	    FROM <include refid="table" /> 
		<include refid="condWhere"/>
		<if test="sortColumns != null">
			ORDER BY ${sortColumns}
		</if>
    </select>
	
	<!-- 取得所有记录，只在表数据量少时使用 -->
    <select id="listAll" resultMap="beanMap">
    	SELECT <include refid="fields" />
	    FROM <include refid="table" /> 
		<if test="sortColumns != null">
			ORDER BY ${sortColumns}
		</if>
    </select>

	<!-- 多条件组合查询，然后由mybatis转成Map之后返回，key字段在调用时指定 -->
    <select id="mapByCond" resultMap="beanMap">
    	SELECT <include refid="fields" />
	    FROM <include refid="table" /> 
		<include refid="condWhere"/>
    </select>

